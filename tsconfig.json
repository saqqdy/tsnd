{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "declaration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        // "rootDirs": ["src"],
        "paths": {
            "@/package": ["./package.json"]
        }
    },
    "include": ["src/**/*.ts", "typings/*.d.ts"],
    "exclude": ["node_modules", "__tests__"]
}
